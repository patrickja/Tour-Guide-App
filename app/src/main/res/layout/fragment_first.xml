<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mia_building_1"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/location_margin_1"
        android:orientation="vertical">

        <TextView
            style="@style/MainPageStyleCommon"
            android:text="@string/artMain"
            android:textSize="@dimen/main_text_mid" />

        <TextView
            style="@style/MainPageStyleOne"
            android:text="@string/intro" />

        <TextView
            style="@style/MainPageStyleCommon"
            android:padding="@dimen/dividerMargin"
            android:text="@string/disclaimer"
            android:textStyle="italic" />
    </LinearLayout>
</ScrollView>